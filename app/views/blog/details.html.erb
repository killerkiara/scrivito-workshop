<div class="details-view" data-scrivito-modal-size="large">
	<%= scrivito_details_for do %>
		<%= link_to 'jump to page', scrivito_path(@obj), target: :_top %>
		<div>Title</div>
		<%= scrivito_tag :div, @obj, :title %>
		<hr/>
		<div>Page Title</div>
		<%= scrivito_tag :div, @obj, :page_title %>
	<% end %>
</div>